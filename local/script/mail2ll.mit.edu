# hashBang line disabled to accommodate Termux's nonstandard filesystem layout...
#!/bin/bash

if [ $# -ne 1 ] ; then
	echo arg1=recipient line1=subject
	exit 1
fi

tempFile=/tmp/mail2ll.mit.edu$$.$timeStamp

cat > "${tempFile}"

sed -e 1d < "${tempFile}" | mail -c michael.odonnell@ll.mit.edu -s "$(head -1 < ${tempFile})" $1"@ll.mit.edu"

rm -f "${tempFile}"
