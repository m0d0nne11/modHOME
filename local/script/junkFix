#!/bin/bash
#
# My personal collection of translations to handle the presence of
# "foreign" byte sequences where only English characters are expected.
#
# Note: Several versions merged 20090512 so some tweaking probably
# required.  Order is important; single-byte occurrences should generally
# be handled after multi-byte sequences.
#
LANG=C sed	\
	-e 's/âEUR"/ -- /g'	\
	-e 's/Â•/ -- /g'	\
	-e 's/Â—/ -- /g'	\
	-e "s/â€™ /'/g"		\
	-e 's/Â€/\(0x80\)/g'	\
	-e 's/Â˜/\(0x98\)/g'	\
	-e 's/ÂŸ/\(0x9f\)/g'	\
	-e 's/Ãƒ/\(0xc3\)/g'	\
	-e 's;Â½;\(1/2\);g'	\
	-e 's;Â¼;\(1/4\);g'	\
	-e 's;Â¾;\(3/4\);g'	\
	-e 's/Â©/\(c\)/g'		\
	-e 's/Ã©/e/g'		\
	-e "s/Â…/.../g"	\
	-e "s/Ã¢Â€Â™/'/g"	\
	-e "s/Ã¢Â€â€/-/g"	\
	-e "s/â€™/'/g"	\
	-e 's/Ã¢Â€Â”/-/g'	\
	-e 's/Ã¢Â€Âœ/"/g'	\
	-e 's/Ã¢Â€Â/"/g'	\
	-e 's/â€”/-/g'	\
	-e 's/â€œ/"/g'	\
	-e 's/â€/"/g'	\
	-e "s/Â‘/'/g"		\
	-e "s/Â’/'/g"		\
	-e "s/Â°/'/g"		\
	-e "s/Â´/'/g"		\
	-e "s/Ã¢/'/g"		\
	-e "s/Ã¢Â€Ã¢Â€Â™/'/g"		\
	-e 's/Â“/"/g'		\
	-e 's/Â”/"/g'		\
	-e 's/Â–/-/g'		\
	-e 's/Âœ/"/g'		\
	-e 's/Â/"/g'		\
	-e 's/Â /-/g'		\
	-e 's/Â«"/<</g'		\
	-e 's/Â­/-/g'		\
	-e 's/Â·/-/g'		\
	-e 's/Â»/>>/g'		\
	-e 's/â€/-/g'		\
	-e 's/Ã­/i/g'		\
	-e 's/Ã¼/u/g'		\
	-e 's/•/ -- /g'	\
	-e 's/—/ -- /g'	\
	-e 's/ / /g'		\
	-e 's/€/(0x80)/g'	\
	-e 's/˜/(0x98)/g'	\
	-e 's/Ÿ/(0x9f)/g'	\
	-e 's/“/"/g'		\
	-e 's/™/(tm)/g'	\
	-e 's;½;(1/2);g'	\
	-e 's;¼;(1/4);g'	\
	-e 's;¼;\(1/4\);g'	\
	-e 's;¾;(3/4);g'	\
	-e 's/©/(C)/g'		\
	-e "s/…/.../g"		\
	-e "s/‘/'/g"		\
	-e "s/’/'/g"		\
