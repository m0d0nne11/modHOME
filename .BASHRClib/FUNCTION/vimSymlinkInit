function vimSymlinkInit() {
	local links ;
	local f ;
	if ! pushd ~ >/dev/null ; then
		echo "Can't pushd ~ ?" ;
		return 1 ;
	fi ;
	links=".exrc .vim .vimrc" ;
	for f in $links ; do
		if [ -e $f ] ; then
			echo " ###### " Already have "$PWD"/$f ;
		else
			echo " ## " Creating symlink "$PWD"/$f ;
			ln -s modHOME/$f ;
		fi ;
	done ;
	ls -laCFld $links ;
	popd >/dev/null ;
}

